@model LTW_FFOOD.Models.FoodViewModel
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "San phẩm theo loại";
}

<head>
    <style>
        .content {
            font-family: "Open Sans", sans-serif;
            box-sizing: border-box;
            width: 100%;
            background-color: beige;
        }


        .menu-food {
            list-style: none;
            display: flex;
            justify-content: center;
            margin: auto;
            border: 1px solid #626A67;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 10px;
            width: 50%;
            margin-top: 175px;
            margin-bottom: 30px;
            background-color: #fff;
        }

            .menu-food .menu-food-item {
                margin: 0px 25px;
                padding: 15px 25px;
                text-transform: uppercase;
                width: 135px;
                text-align: center;
            }

                .menu-food .menu-food-item a {
                    color: #626A67;
                    text-decoration: none;
                    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
                    font-weight: 500;
                    transition: all 0.3s ease-in-out;
                }

                    .menu-food .menu-food-item a:hover {
                        color: #fdc401;
                        border-radius: 10px;
                    }

        .content h2 {
            text-align: center;
            margin: 30px;
            font-family: Garamond;
        }

        #wp-products {
            padding: 50px 10% 30px 10%;
        }

            #wp-products h2 {
                text-align: center;
                margin-bottom: 50px;
                font-size: 32px;
                color: #626a67;
            }

        #list-products {
            display: flex;
            list-style: none;
            justify-content: space-around;
            align-items: center;
            flex-wrap: wrap;
        }

            #list-products .item {
                width: 290px;
                height: 374px;
                background: #362f2f;
                border-radius: 10px;
                margin-bottom: 30px;
            }

                #list-products .item img {
                    width: 238px;
                    height: 206px;
                    display: block;
                    margin: 0px auto;
                    margin-top: 17px;
                    transition: transform 0.3s ease;
                }

                    #list-products .item img:hover {
                        transform: scale(1.1);
                    }

                #list-products .item .name {
                    text-align: center;
                    color: #fff;
                    font-weight: bold;
                    margin-top: 15px;
                    text-transform: uppercase;
                }

        .name a {
            text-decoration: none;
        }

        #list-products .item .desc {
            text-align: center;
            color: #626a67;
        }

        #list-products .item .price {
            text-align: center;
            color: #f42424;
            font-weight: bold;
        }

        .order-button {
            text-align: center;
            margin-top: 5px;
        }

            .order-button a {
                display: inline-block;
                padding: 10px 20px;
                background-color: #28a745;
                color: #fff;
                text-decoration: none;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .order-button a:hover {
                    background-color: #218838;
                }

            .order-button a {
                background-color: yellow;
                color: #000000;
                width: 150px;
                height: 45px;
                font-size: 18px;
            }

        .pagination {
            display: flex;
            justify-content: center;
            padding: 20px 0;
        }

            .pagination .page-item {
                margin: 0 5px;
            }

                .pagination .page-item a {
                    color: #333;
                    border: 1px solid #ddd;
                    padding: 5px 10px;
                    text-decoration: none;
                }

            .pagination .active a {
                background-color: #007bff;
                color: white;
                transform: scale(1.1);
            }

            .pagination .page-item a:hover {
                background-color: #ddd;
            }
    </style>

</head>
<div class="menu-food">
    <div class="menu-food-item">
        <a href="/Product/Sanphamtheoloai">ALL</a>
    </div>
    @foreach (var item in Model.Categories)
    {

        <div class="menu-food-item">
            @Html.ActionLink(item.foodcategory_name, "SanphamtheoloaitheoID", "Product", new { @id = item.foodcatagory_id }, null)
        </div>
    }


</div>

<div class="content">

    <h2>@Model.category.foodcategory_name</h2>
    <ul id="list-products">
        @foreach (var food in Model.Foodss)
        {
        <div class="item details">
            <a href="/Product/Chitietsanpham/@food.food_id">
                <img src="@Url.Content("~/image/" + food.image)" alt="@food.food_name" class="thumbnail" />
            </a>                <div class="details-content">
                <div class="name"> @Html.ActionLink(food.food_name, "Chitietsanpham", "Product", new { @id = food.food_id }, null)</div>
                <div class="price">@food.price.ToString("#,##0")đ</div>
                <div class="order-button">
                    @Html.ActionLink("🛒 Đặt Hàng", "Addtocart", "ShoppingCart", new { @id = food.food_id }, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>

        }
    </ul>
</div>
@Html.PagedListPager(Model.Foodss, page => Url.Action("SanphamtheoloaitheoID", new { page }), new PagedListRenderOptions
{
    UlElementClasses = new string[] { "pagination" },
    LiElementClasses = new string[] { "page-item" }
})

