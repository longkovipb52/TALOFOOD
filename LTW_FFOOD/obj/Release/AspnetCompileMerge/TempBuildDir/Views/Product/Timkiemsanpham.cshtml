@model IEnumerable<LTW_FFOOD.Models.Food>
    <script src="~/Scripts/jquery-1.10.2.js">
    $(document).ready(function () {
        var productCount = $('.product').length;
        if (productCount < 4) {
            $('.product-doan').css('grid-template-columns', 'repeat(' + productCount + ', 1fr)');
        }
    });

</script>
    <style>
        #wp-products {
            padding: 50px 10% 30px 10%;
        }

            #wp-products h2 {
                text-align: center;
                margin-bottom: 50px;
                font-size: 32px;
                color: #626a67;
            }

        #list-products {
            display: flex;
            list-style: none;
            justify-content: space-around;
            align-items: center;
            flex-wrap: wrap;
        }

            #list-products .item {
                width: 290px;
                height: 374px;
                background: #362f2f;
                border-radius: 10px;
                margin-bottom: 30px;
            }

                #list-products .item img {
                    width: 238px;
                    height: 206px;
                    display: block;
                    margin: 0px auto;
                    margin-top: 17px;
                    transition: transform 0.3s ease;
                }

                    #list-products .item img:hover {
                        transform: scale(1.1);
                    }

                #list-products .item .name {
                    text-align: center;
                    color: #fff;
                    font-weight: bold;
                    margin-top: 15px;
                    text-transform: uppercase;
                }

        .name a {
            text-decoration: none;
        }

        #list-products .item .desc {
            text-align: center;
            color: #626a67;
        }

        #list-products .item .price {
            text-align: center;
            color: #f42424;
            font-weight: bold;
        }

        .order-button {
            text-align: center;
            margin-top: 5px;
        }

            .order-button a {
                display: inline-block;
                padding: 10px 20px;
                background-color: #28a745;
                color: #fff;
                text-decoration: none;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .order-button a:hover {
                    background-color: #218838;
                }

            .order-button a {
                background-color: yellow;
                color: #000000;
                width: 150px;
                height: 45px;
                font-size: 18px;
            }
    </style>
<h2 style="text-align:center;margin-bottom:30px;margin-top:150px;">Sản Phẩm Tìm Được</h2>
<ul id="list-products">
    @foreach (var food in Model)
    {
        <div class="item">
            <img src="@Url.Content("~/image/" + food.image)" alt="@food.food_name" style="max-height:206px;max-width:238px;" />
            <div class="name"> @Html.ActionLink(food.food_name, "Chitietsanpham", "Product", new { @id = food.food_id }, null)</div>
            <div class="price">@food.price.ToString("#,##0")đ</div>
            <div class="order-button">
                @Html.ActionLink("🛒 Đặt Hàng", "Addtocart", "ShoppingCart", new { @id = food.food_id }, new { @class = "btn btn-success" })
            </div>

        </div>

    }
</ul>
