        .show-more {
            margin: 21px 1px;
            width: 100%;
            text-align: center;
            padding: 21px 1px;
        }

            .show-more a {
                font-weight: 600;
            }

        #wp-products {
            padding: 50px 10% 30px 10%;
        }

            #wp-products h2 {
                text-align: center;
                margin-bottom: 50px;
                font-size: 32px;
                color: #626a67;
            }

        #list-products {
            display: flex;
            list-style: none;
            justify-content: space-around;
            align-items: center;
            flex-wrap: wrap;
        }

            #list-products .item {
                width: 290px;
                height: 374px;
                background: #362f2f;
                border-radius: 10px;
                margin-bottom: 30px;
            }

                #list-products .item img {
                    width: 238px;
                    height: 206px;
                    display: block;
                    margin: 0px auto;
                    margin-top: 17px;
                    transition: transform 0.3s ease;
                }

                    #list-products .item img:hover {
                        transform: scale(1.1);
                    }

                #list-products .item .name {
                    text-align: center;
                    color: #fff;
                    font-weight: bold;
                    margin-top: 15px;
                    text-transform: uppercase;
                }

        .name a {
            text-decoration: none;
        }

        #list-products .item .desc {
            text-align: center;
            color: #626a67;
        }

        #list-products .item .price {
            text-align: center;
            color: #f42424;
            font-weight: bold;
        }

        #list-products .item .stars {
            display: flex;
            margin: -7px 106px;
            width: 50%;
        }

            #list-products .item .stars img {
                max-height: 16px;
                max-width: 16px;
            }

        .order-button {
            text-align: center;
            margin-top: 5px;
        }

            .order-button a {
                display: inline-block;
                padding: 10px 20px;
                background-color: #28a745;
                color: #fff;
                text-decoration: none;
                border-radius: 5px;
                transition: background-color 0.3s ease;
             
            }

                .order-button a:hover {
                    background-color: #218838;
                }

            .order-button a {
                background-color: yellow;
                color: #000000;
                width: 150px;
                height: 45px;
                font-size: 18px;
            }

        .pagination {
            display: flex;
            justify-content: center;
            padding: 20px 0;
        }

            .pagination .page-item {
                margin: 0 5px;
            }

                .pagination .page-item a {
                    color: #333;
                    border: 1px solid #ddd;
                    padding: 5px 10px;
                    text-decoration: none;
                }

            .pagination .active a {
                background-color: #007bff;
                color: white;
                transform: scale(1.1);
            }

            .pagination .page-item a:hover {
                background-color: #ddd;
            }
