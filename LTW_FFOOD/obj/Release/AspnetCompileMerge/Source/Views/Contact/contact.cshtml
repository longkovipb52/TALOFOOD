<style>
   
    .row {
        min-width:1000px;
    }

        .row .contact-form {
            width: 50%;
        }
    .row .map-form{
        width:50%;
    }
    .row h1{
        text-align:center;
        padding:20px 0;
    }
    .form-group {
        font-size: 28px;
        margin: 50px;
        display: flex;
        flex-direction: column;
        align-items: center;   
    }
    .form-control {
        font-size: 28px;
        border: 0;
        outline: none;
        -moz-box-shadow: 0 5px 20px 0 rgba(250,66,81,.1);
        box-shadow: 0 10px 30px 0 rgb(189, 89, 212);
    }
    button[type="submit"] {
        margin: 0 auto;
        display: block;
    }
    .map-form iframe {
        border: 0;
        border-radius: 10px;
        overflow: hidden;
        width: 100%;
        height:100%;
    }
    .contact-form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        border: 1px solid;
        padding: 30px; 
        max-width: 425px; 
        margin: 0 auto; 
        background-color:lightpink;
    }
    .header-contact {
        color: #ff6a00;
        text-align: center;
        font-size: 40px;
        margin-top: 20px;
        margin-bottom: 40px;
        font-family: 'MergeBlack',sans-serif;
        text-transform: uppercase;
    }
    .wrapper-header-box-left {
        padding: 0px 110px;
        font-family: 'MergeBlack',sans-serif;
        font-size: 24px;
    }
    .header-contact h1{
        font-weight:bold;
    }
    .header-box-left {
        padding-bottom: 15px;
    }
    .col-12{
        margin-left:-340px;
    }
</style>
@if(TempData["ThongBaoThanhCong"] != null)
{
    <div class="alert alert-success" style="text-align:center" >
        @TempData["ThongBaoThanhCong"]
    </div>
}
@if(TempData["ThongBaoLoi"] != null)
{
    <div class="alert alert-danger" style="text-align:center">
        @TempData["ThongBaoLoi"]
    </div>
}
